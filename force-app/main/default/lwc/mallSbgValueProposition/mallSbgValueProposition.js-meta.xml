<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Mall SBG Value Proposition</masterLabel>
    <description>A collection of 4 readonly blocks comprising of an icon with a title and some text</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property type="String" name="headerText" label="Main Heading" default="Value Proposition Heading" />
            <property type="Boolean" name="unstyledVariant" label="Show plain theme" default="false" />
            <property type="Boolean" name="shieldType" label="Shield Type" default="false" />
            <property type="String" name="jsonCollection" label="Value Proposition Collection" default='[{"id": 1,"title": "title","description":"description","image":"imageUrl"}]' />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>